{
    "rules": {
        "indent": [
            2,
            2,
            {
                "VariableDeclarator": {
                    "var": 2,
                    "let": 2,
                    "const": 3
                }
            }
        ],
        "no-unused-vars": [
            2,
            {
                "args": "none"
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0
    },
    "env": {
        "es6": false,
        "browser": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "require": true
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
